<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skincap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brushed_teal</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSecondaryVariant">@color/siam</item>
        <item name="colorOnSecondary">@color/light_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Icon.AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@drawable/ic_skincap_logo</item>
    </style>

    <style name="Background.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/nav_background_curve</item>
    </style>

    <style name="TextAppearance.Active" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.InActive" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PopupMenu.Journal" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/cream</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:itemBackground">@drawable/menu_dropdown_panel_background</item>
    </style>

    <style name="SkinCapStyle" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
        <item name="bottomToolbar.apply.textColor">@color/black</item>
        <item name="toolbar">@style/ToolbarWhite</item>
    </style>

    <style name="ToolbarWhite" parent="Toolbar.Zhihu">
        <item name="android:statusBarColor">@color/dark_brown</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="TextAppearance.Color" parent="android:TextAppearance">
        <item name="android:textColor">@color/dark_brown</item>
        <item name="tint">@color/dark_brown</item>
        <item name="drawableTint">@color/dark_brown</item>
    </style>

    <style name="TextAppearance.ColorCard" parent="android:TextAppearance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/white</item>
        <item name="drawableTint">@color/gray</item>
    </style>

    <style name="FloatingButton.Color" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/dark_brown</item>
    </style>
</resources>
