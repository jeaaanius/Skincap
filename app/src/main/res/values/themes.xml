<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skincap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brushed_teal</item>
        <item name="colorSecondaryVariant">@color/siam</item>
        <item name="colorOnSecondary">@color/light_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splashscreen</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Active" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.InActive" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>