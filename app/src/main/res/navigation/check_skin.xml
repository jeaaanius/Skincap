<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/check_skin"
    app:startDestination="@id/camera_gallery">

    <fragment
        android:id="@+id/camera_gallery"
        android:name="com.example.skincap.ui.checkskin.CheckSkinFragment"
        android:label="Check Skin"
        tools:layout="@layout/fragment_check_skin" >

        <action
            android:id="@+id/to_settings"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.skincap.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>

</navigation>